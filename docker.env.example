# docker.env.example - Docker environment configuration
# Copy this file to docker.env and adjust values as needed

# =============================================================================
# JACK BRIDGE SERVICE CONFIGURATION
# =============================================================================
# Windows JACK host connection
JACK_SERVER_HOST=host.docker.internal
JACK_SERVER_PORT=1234
JACK_TOOLS_PATH=C:/PROGRA~1/JACK2/tools

# Bridge service ports
JACK_BRIDGE_API_PORT=6666
JACK_BRIDGE_WS_PORT=6667

# Bridge service settings
JACK_BRIDGE_LOG_LEVEL=INFO
JACK_BRIDGE_MONITOR_INTERVAL=1000
JACK_BRIDGE_RECONNECT_INTERVAL=5000

# =============================================================================
# JACK ROUTER SERVICE CONFIGURATION
# =============================================================================
# Environment
NODE_ENV=production

# Server ports
ROUTER_HTTP_PORT=3001
ROUTER_HTTPS_PORT=3443
ROUTER_HOST=0.0.0.0

# JACK Bridge connection
JACK_BRIDGE_HOST=jack-bridge
JACK_BRIDGE_PORT=6666
JACK_BRIDGE_WS_PORT=6667

# SSL Configuration
SSL_AUTO_GENERATE=true
SSL_ENABLED=true
FORCE_HTTPS=false

# =============================================================================
# MQTT CONFIGURATION
# =============================================================================
# MQTT settings
MQTT_ENABLED=true
MQTT_HOST=mqtt://mosquitto:1883
MQTT_PORT=1883
MQTT_CLIENT_ID=jack-audio-router