# .env.example - Environment configuration template
# Copy this file to .env and adjust values as needed

# =============================================================================
# MQTT CONFIGURATION (Home Assistant Integration)
# =============================================================================
# Enable MQTT integration
MQTT_ENABLED=false

# MQTT broker connection
MQTT_HOST=mqtt://localhost:1883
# MQTT_HOST=mqtts://localhost:8883  # For SSL/TLS

# MQTT authentication (optional)
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT client settings
MQTT_CLIENT_ID=jack-audio-router
MQTT_KEEPALIVE=60
MQTT_RECONNECT_PERIOD=1000

# Device information for Home Assistant
DEVICE_MODEL=Behringer UMC1820
DEVICE_MANUFACTURER=Behringer

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development
# Options: development, production, test

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
HTTPS_PORT=3443
HOST=0.0.0.0

# Force HTTPS redirect (production only)
FORCE_HTTPS=false

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
# Auto-generate self-signed certificates for development
SSL_AUTO_GENERATE=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
# Options: ERROR, WARN, INFO, DEBUG

# Enable colored console output
LOG_COLORS=true

# =============================================================================
# JACK CONFIGURATION
# =============================================================================
# Path to JACK tools (Windows/WSL)
JACK_TOOLS_PATH=C:/PROGRA~1/JACK2/tools

# JACK command timeout in milliseconds
JACK_TIMEOUT=10000

# JACK status cache TTL in milliseconds
JACK_STATUS_CACHE_TTL=5000

# =============================================================================
# STATE MANAGEMENT
# =============================================================================
# Auto-save interval in milliseconds (30 seconds)
STATE_AUTO_SAVE_INTERVAL=30000

# Enable state backup files
STATE_BACKUP_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://localhost:3443

# =============================================================================
# SECURITY
# =============================================================================
# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# HEALTH MONITORING
# =============================================================================
# Health check timeout in milliseconds
HEALTH_CHECK_TIMEOUT=5000

# Health check cache TTL in milliseconds
HEALTH_CHECK_CACHE_TTL=10000

# =============================================================================
# DEVELOPMENT
# =============================================================================
# Vite dev server proxy target
DEV_PROXY_TARGET=http://localhost:5173

# Enable hot reload in development
HOT_RELOAD_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_SSL_ENABLED=true
FEATURE_STATE_PERSISTENCE=true
FEATURE_CONNECTION_TRACKING=true
FEATURE_HEALTH_MONITORING=true
FEATURE_PRESET_VALIDATION=true

# =============================================================================
# CUSTOM PATHS (Advanced)
# =============================================================================
# Override default paths if needed
# SSL_DIR=./ssl
# STATE_DIR=./state
# DIST_DIR=./dist